# Server Configuration
NODE_ENV=development
PORT=3000

# Allowed origins for CORS (comma-separated in production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting Configuration
# Time window for rate limiting in milliseconds (default: 15 minutes = 900000 ms)
RATE_LIMIT_WINDOW_MS=900000

# Maximum number of requests per window for IP-based rate limiting (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Maximum number of requests per hour for user-based rate limiting (default: 1000)
RATE_LIMIT_MAX_USER_REQUESTS=1000

# Yahoo Finance API Configuration
YAHOO_FINANCE_API_ENABLED=true

# Authentication Configuration
# JWT Secret for signing tokens (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token expiration time (default: 24h)
JWT_EXPIRATION=24h

# bcrypt salt rounds for password hashing (default: 12)
BCRYPT_SALT_ROUNDS=12

# Redis Configuration
# Redis server hostname (default: localhost)
REDIS_HOST=localhost

# Redis server port (default: 6379)
REDIS_PORT=6379

# Redis password (leave empty if Redis doesn't require authentication)
REDIS_PASSWORD=

# Redis database number (default: 0)
REDIS_DATABASE=0

# Default TTL for cache entries in seconds (default: 86400 = 24 hours)
REDIS_TTL_SECONDS=86400

# Redis connection timeout in milliseconds (default: 10000)
REDIS_CONNECTION_TIMEOUT=10000

# Logging Configuration
# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Enable request logging (true/false)
LOG_REQUESTS=true

# Enable performance monitoring (true/false)
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting - Additional Configuration
# Rate limiter store type (memory or redis)
RATE_LIMIT_STORE=memory

# Skip successful requests from rate limit counting (true/false)
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Skip rate limiting for certain IPs (comma-separated)
RATE_LIMIT_SKIP_IPS=

# API Keys and Secrets
# External API keys (add as needed)
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
FINNHUB_API_KEY=
